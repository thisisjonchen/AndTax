<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#388E3C"
                        android:endColor="#7ACF7D"
                        />
                    <corners
                        android:radius="1000px"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- BUTTON -->
            <item>
                <shape>
                    <gradient
                        android:startColor="#757575"
                        android:endColor="#757575" />
                    <corners
                        android:radius="500dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>